generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id               String      @id @default(auto()) @map("_id") @db.ObjectId
    name             String?
    email            String      @unique
    image            String?
    bookedVisits     Json[]
    favResidenciesID String[]    @db.ObjectId
    ownedResidencies Residency[] @relation("Owner")

    // 一个名为User的模型，这个模型会映射到MongoDB数据库的一个集合。这个模型包括了一个id字段，其类型为String，@id代表这是主键（key），其默认值由数据库自动生成，
    // @map（“_id”）将其映射到MongoDB中的_idziduan ,@db.object将其类型定义为MongoDB的ObjectID
}

model Residency {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String?
    type        String?
    description String?
    price       Int?
    address     String?
    mlsNumber   String?
    propertyType String?
    livingSpace Float?
    lotSize     Float?
    yearBuild   Int?
    city        String?
    country     String?
    municipalTaxes  Float?
    schoolTaxes Float?
    condoFee    Float?
    rooms       Json?
    image       String?
    facilities  Json
    images      Json
    userEmail   String
    agentInfo   Json
    owner       User     @relation("Owner", fields: [userEmail], references: [email])
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    amenities   String[]

    @@unique(fields: [mlsNumber, userEmail])
}

model Franchise {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  title        String?   
  description  String?   
  size         String?    
  rent         String?    
  investment   String?    
  franchiseFee Float?    
  sales        String?    
  targetPeople String?   
  image        String?   
  images       String[]  
  maps         String[]  
  agentInfo    Json 
}

model Commercial{
    id              String    @id @default(auto()) @map("_id") @db.ObjectId
    title           String? 
    type            String?
    description     String?
    propertyType    String?
    livingSpace     String?
    lotSize         String?
    annualRevenue   String?
    totalInvestment String?
    estimatedProfit String?
    EstimatedPaybackPeriod String?
    address         String?
    mlsNumber       String?
    image           String?
    images          String[]
    agentInfo       Json
}
